<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title> Registration Form with validation Example</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<link rel="stylesheet" href="css/s3.css">

</head>
<body>
    <div class="wrapper">

 <div class="registration_form">
<!-- Title -->
  <div class="title">
    Sign Up
  </div>

<!-- Form -->
 <form action="/register" method="POST">
  <div class="form_wrap">
   <div class="input_grp">

<!-- Frist name input Place -->
     <div class="input_wrap">
  	<label for="fname">First Name</label>
  	<input type="text" id="fname" name="firstname" value="" >
     </div>

<!-- Last Name input place -->
    <div class="input_wrap">
      <label for="lname">Last Name</label>
      <input type="text" id="lname" name="lastname" value="" >
    </div>
  </div>

<!-- Username  input Place -->
 {{!-- <div class="input_wrap">
  <label for="text">Username</label>
  <input type="text" id="text" name="username" value="" >
 </div> --}}

<!-- Email  input place -->
 <div class="input_wrap">
  <label for="email">Email</label>
  <input type="email" id="email" name="email" value="" >
 </div>

<!-- Phone  input place -->
 <div class="input_wrap">
  <label for="phone">Phone No.</label>
  <input type="tel" id="phone" name="phone" value="" >
 </div>

<!-- Create Password  input place -->
 <div class="input_wrap">
  <label for="password"> Create Password</label>
  <input type="password" id="password" name="password" value="" >
 </div>
<!-- Confirm Password  input place -->
 <div class="input_wrap">
  <label for="password"> Confirm Password</label>
  <input type="password" id="confirmpassword" name="confirmpassword" value="" >
 </div>

<!-- Gender Select box -->
 <div class="input_wrap">
   <label>Gender</label>
  <ul>
   <li>
     <label class="radio_wrap">
  	<input type="radio" name="gender" value="male" class="input_radio" checked required>
  	<span>Male</span>
     </label>
  </li>

  <li>
    <label class="radio_wrap">
  	<input type="radio" name="gender" value="female" class="input_radio">
  	<span>Female</span>
   </label>
  </li>
 </ul>
</div>

<!-- Submit button -->
 <div class="input_wrap">
   <input type="submit" value="Register" class="submit_btn">
 </div>

   <div id="create-account-wrap">
    <p>Alredy have an account? <a href="/login">Login</a><p>
  </div>

</div>
</form>
</div>
</div>
</div>
</body>
</html>


