    <div class="card">
      <h2>CONSENT FORM</h2>
    
        <form action="/applicationform" method="POST">
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label>Full Name</label>
            <input type="text" id="fullname" name="fullname" value="">
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label>Blood Group</label>
            <input type="text" id="bloodgroup" name="bloodgroup" value="">
          </div>
        </div>
    
        <div class="col">
          <div class="form-group">
            <label>Email</label>
            <input type="text" id="email" name="email" value="">
          </div>
        </div>

        <div class="col">
          <div class="form-group">
            <label>Address</label>
            <input type="text" id="address" name="address" value="">
          </div>
        </div>

        <div class="col">
          <div class="form-group">
            <label>Age</label>
            <input type="number" id="age" name="age" value="">
          </div>
        </div>

        <div class="col">
          <div class="form-group">
            <label>Birth-Date</label>
            <input type="Date" id="dob" name="dob" value="">
          </div>
        </div>
    
        <div class="col">
          <div class="form-group">
            <label>Contact</label>
            <input type="tel" id="contact" name="contact" value="">
          </div>
        </div>
    
        <div class="col">
          <div class="form-group">
            <label>Emergency Contact</label>
            <input type="tel" id="econtact" name="econtact" value="">
          </div>
        </div>

        <div class="col">
          <div class="form-group">
            <label>Maritial Status</label>
            <!-- <input type="text"> -->
            <select id="mstatus" name="mstatus">
              <option value="Single">Single</option>
              <option value="Married">Married</option>
              
            </select>
          </div>
        </div>

        <div class="col">
          <div class="form-group">
            <label>Gender</label>
            <select id="gender" name="gender">
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              
            </select>
            
          </div>
        </div>
      
        <div class="col">
          <div class="form-group">
            <label>Religion</label>
            <input type="text" id="religion" name="religion" value="">
          </div>
        </div>

        <div class="col">
          <div class="form-group">
            <label>Occupation</label>
            <input type="text" id="occupation" name="occupation" value="">
          </div>
        </div>
    
        <div class="col">
          <input type="submit" value="Submit">
        </div>
